datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  uid             String        @id
  email           String
  contact_details Json?
  Course          Course[]
  Enrollments     Enrollments[]
  Managers        Managers[]
}

model Course {
  id          Int           @id @default(autoincrement())
  title       String
  enabled     Boolean       @default(true)
  topic       String
  creator_id  String
  creator     User          @relation(fields: [creator_id], references: [uid])
  Enrollments Enrollments[]
  Topic       Topic[]
}

// Do we need this?
model Topic {
  id        Int     @id @default(autoincrement())
  title     String
  type      String
  content   String?
  course_id Int
  course    Course  @relation(fields: [course_id], references: [id])
  Quiz      Quiz[]
}

model Quiz {
  id       Int        @id @default(autoincrement())
  title    String
  topic_id Int
  //topic    Topic      @relation(fields: [topic_id], references: [id])
  Question Question[]
  Topic    Topic?     @relation(fields: [topicId], references: [id])
  topicId  Int?
}

model Question {
  id            Int      @id @default(autoincrement())
  question_text String
  explanation   String
  quiz_id       Int
  quiz          Quiz     @relation(fields: [quiz_id], references: [id])
  Choice        Choice[]
}

model Choice {
  id          Int      @id @default(autoincrement())
  choice_text String
  is_correct  Boolean  @default(false)
  question_id Int
  question    Question @relation(fields: [question_id], references: [id])
}

model Enrollments {
  id        Int    @id @default(autoincrement())
  user_id   String
  user      User   @relation(fields: [user_id], references: [uid])
  course_id Int
  course    Course @relation(fields: [course_id], references: [id])
}

model Managers {
  id      Int    @id @default(autoincrement())
  user_id String
  user    User   @relation(fields: [user_id], references: [uid])
}

// Prisma docs have an example using an enum instead.
model Roles {
  id   Int    @id @default(autoincrement())
  name String
}
